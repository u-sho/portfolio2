{
  /* editor */
  "editor.detectIndentation" : true,
  "editor.renderFinalNewline": true,
  "editor.rulers"            : [80, 100],
  "editor.stickyTabStops"    : false,
 
  // editor.bracket
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs"            : "active",
  "editor.guides.bracketPairsHorizontal"  : false,
  "editor.matchBrackets"                  : "always",

  // editor.format
  "editor.codeActionsOnSave" : { "source.fixAll": true },
  "editor.defaultFormatter"  : "dbaeumer.vscode-eslint",
  "editor.formatOnPaste"     : true,
  "editor.formatOnSave"      : true,
  "editor.formatOnType"      : false,
  "editor.tabSize"           : 2,
  
  // editor.font
  "editor.fontFamily": "PlemolJP35, 'Fira Code iScript', 'Source Han Code JP'",
  "editor.tokenColorCustomizations": {
    "functions": { "fontStyle": "italic bold" },
    "keywords" : { "fontStyle": "italic" },
    "numbers"  : { "fontStyle": "bold" },
    "types"    : { "fontStyle": "italic" },
    "variables": { "fontStyle": "bold" },
  },


  /* files */
  "files.encoding": "utf8",
  "files.eol"     : "\n",
  "files.insertFinalNewline": false,
  "files.trimFinalNewlines" : true,


  /* terminal */
  "terminal.integrated.enableBell": true,
  "terminal.integrated.fontFamily": "'PlemolJP35 Console', 'PlemolJP35Nerd Console'",
}
