{
	/* Editor */

	// bracket
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"editor.guides.bracketPairsHorizontal": false,
	"editor.matchBrackets": "always",

	// font
	"editor.fontFamily": "PlemolJP35, 'Fira Code iScript', 'Source Han Code JP'",
	"editor.tokenColorCustomizations": {
		"functions": { "fontStyle": "italic bold" },
		"keywords": { "fontStyle": "italic" },
		"numbers": { "fontStyle": "bold" },
		"types": { "fontStyle": "regular" },
		"variables": { "fontStyle": "italic" }
	},
	"editor.renderControlCharacters": true,

	/* Format & Lint */

	// files
	"files.encoding": "utf8",
	"files.eol": "\n",
	"files.insertFinalNewline": false,
	"files.trimFinalNewlines": true,

	// editor.format
	"editor.codeActionsOnSave": { "source.fixAll": true },
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnType": false,
	"editor.tabSize": 2,

	// editor.formatSupport
	"editor.detectIndentation": true,
	"editor.renderFinalNewline": true,
	"editor.rulers": [80, 100],
	"editor.stickyTabStops": false,
	"editor.wordWrapColumn": 100,

	// eslint
	"eslint.enable": true,
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"eslint.packageManager": "npm",
	"eslint.probe": ["html", "javascript", "markdown", "svelte", "typescript"],
	"eslint.run": "onSave",
	"eslint.trace.server": "messages",

	// errorLens
	"errorLens.enabled": true,
	"errorLens.excludePatterns": ["**/*.test.ts"],

	// snyk
	"snyk.features.codeQuality": true,
	"snyk.features.codeSecurity": true,
	"snyk.features.openSourceSecurity": true,

	// code spell checker
	"cSpell.words": ["userid"],

	/* Git */
	"git.allowNoVerifyCommit": false,
	"git.confirmEmptyCommits": true,
	"git.confirmForcePush": true,
	"git.enableCommitSigning": true,

	// gitmoji
	"gitmoji.outputType": "emoji",

	/* Terminal */
	"terminal.integrated.enableBell": true,
	"terminal.integrated.fontFamily": "'PlemolJP35 Console', 'PlemolJP35Nerd Console'",

	/* Languages */

	// js/ts
	"js/ts.implicitProjectConfig.checkJs": true,

	"[jsonc][yaml]": {
		"editor.codeActionsOnSave": { "source.fixAll": true },
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},

	// svelte
	"svelte.enable-ts-plugin": true,
	"svelte.plugin.svelte.format.enable": false,
	"svelte.trace.server": "messages"
}
