{
	/* Format & Lint */

	// files
	"files.encoding": "utf8",
	"files.eol": "\n",
	"files.insertFinalNewline": false,
	"files.trimFinalNewlines": true,

	// editor.format
	"editor.codeActionsOnSave": { "source.fixAll": true },
	"editor.defaultFormatter": "dbaeumer.vscode-eslint",
	"editor.formatOnSave": true,

	// editor.formatSupport
	"editor.detectIndentation": true,
	"editor.renderFinalNewline": true,
	"editor.rulers": [80, 100],
	"editor.stickyTabStops": false,
	"editor.wordWrapColumn": 100,

	// eslint
	"eslint.enable": true,
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"eslint.packageManager": "npm",
	"eslint.probe": ["html", "javascript", "markdown", "svelte", "typescript"],
	"eslint.trace.server": "messages",

	// errorLens
	"errorLens.enabled": true,
	"errorLens.excludePatterns": ["**/*.test.ts"],

	// snyk
	"snyk.features.codeQuality": true,
	"snyk.features.codeSecurity": true,
	"snyk.features.openSourceSecurity": true,

	/* Git */
	"git.allowNoVerifyCommit": false,
	"git.confirmEmptyCommits": true,
	"git.confirmForcePush": true,
	"git.enableCommitSigning": true,

	// gitmoji
	"gitmoji.outputType": "emoji",

	/* Languages */

	// js/ts
	"js/ts.implicitProjectConfig.checkJs": true,

	"[jsonc][yaml]": {
		"editor.codeActionsOnSave": { "source.fixAll": true },
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},

	// svelte
	"svelte.enable-ts-plugin": true,
	"svelte.plugin.svelte.format.enable": false,
	"svelte.trace.server": "messages",

	// spell
	"cSpell.enabled": true,
	"cSpell.words": ["organise", "prerender", "recognise", "Uncomaparable"],
	"cSpell.ignoreWords": [
		"deepcode",
		"fira",
		"fontsource",
		"lukeed",
		"rgba",
		"srcset",
		"typeof",
		"TSESLint",
		"webp"
	]
}
